{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "description": "Data Model DDL file version 1.0.0",
      "type": "string",
      "const": "1"
    },
    "name": {
      "title": "Data Model Name",
      "type": "string",
      "minLength": 2,
      "maxLength": 59,
      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
    },
    "dialect": {
      "title": "Database Dialect",
      "description": "The database dialect for which the data model is intended",
      "default": "postgres",
      "type": "string",
      "enum": [
        "postgres"
      ]
    },
    "description": {
      "title": "Data Model Description",
      "description": "Can be used to describe the purpose of the data model",
      "type": "string",
      "maxLength": 255
    },
    "tables": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "title": "Table Name",
            "type": "string",
            "minLength": 2,
            "maxLength": 59,
            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
          },
          "description": {
            "title": "Table Description",
            "description": "Can be used to describe the purpose of the table in the data model",
            "type": "string",
            "maxLength": 255
          },
          "columns": {
            "minItems": 1,
            "maxItems": 1600,
            "type": "array",
            "items": {
              "anyOf": [
                {
                  "title": "UUID identifier column",
                  "description": "Used for identifying a record uniquely in the table with UUID v4",
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "minLength": 2,
                      "maxLength": 59,
                      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                    },
                    "description": {
                      "type": "string",
                      "maxLength": 255
                    },
                    "type": {
                      "type": "string",
                      "const": "uuid"
                    },
                    "default": {
                      "type": "string",
                      "const": "gen_random_uuid()"
                    },
                    "primary_key": {
                      "default": true,
                      "type": "boolean"
                    }
                  },
                  "required": [
                    "name",
                    "type",
                    "default",
                    "primary_key"
                  ],
                  "additionalProperties": false
                },
                {
                  "title": "Integer identifier column",
                  "description": "Used for identifying a record uniquely in the table with auto-incrementing integer",
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "minLength": 2,
                      "maxLength": 59,
                      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                    },
                    "description": {
                      "type": "string",
                      "maxLength": 255
                    },
                    "type": {
                      "type": "string",
                      "const": "integer"
                    },
                    "generated_always_as": {
                      "type": "string",
                      "const": "identity"
                    },
                    "primary_key": {
                      "default": true,
                      "type": "boolean"
                    }
                  },
                  "required": [
                    "name",
                    "type",
                    "generated_always_as",
                    "primary_key"
                  ],
                  "additionalProperties": false
                },
                {
                  "title": "Integer foreign key column",
                  "description": "Used for identifying a row in another table with an integer. It references a column in another table.",
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "minLength": 2,
                      "maxLength": 59,
                      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                    },
                    "description": {
                      "type": "string",
                      "maxLength": 255
                    },
                    "type": {
                      "type": "string",
                      "const": "integer"
                    },
                    "nullable": {
                      "default": false,
                      "type": "boolean"
                    },
                    "foreign_key": {
                      "type": "object",
                      "properties": {
                        "table": {
                          "type": "string",
                          "minLength": 2,
                          "maxLength": 59,
                          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                        },
                        "column": {
                          "type": "string",
                          "minLength": 2,
                          "maxLength": 59,
                          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                        }
                      },
                      "required": [
                        "table",
                        "column"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "name",
                    "type",
                    "foreign_key"
                  ],
                  "additionalProperties": false
                },
                {
                  "title": "Decimal number column",
                  "description": "Used for storing decimal numbers with a fixed precision.",
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "minLength": 2,
                      "maxLength": 59,
                      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                    },
                    "description": {
                      "type": "string",
                      "maxLength": 255
                    },
                    "type": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "const": "numeric"
                        },
                        "options": {
                          "type": "object",
                          "properties": {
                            "precision": {
                              "type": "number",
                              "minimum": 0,
                              "maximum": 1000
                            },
                            "scale": {
                              "type": "number",
                              "minimum": 0,
                              "maximum": 1000
                            }
                          },
                          "required": [
                            "precision",
                            "scale"
                          ],
                          "additionalProperties": false
                        }
                      },
                      "required": [
                        "name",
                        "options"
                      ],
                      "additionalProperties": false
                    },
                    "nullable": {
                      "default": false,
                      "type": "boolean"
                    },
                    "default": {
                      "anyOf": [
                        {
                          "type": "string"
                        },
                        {
                          "type": "number"
                        }
                      ]
                    },
                    "unique": {
                      "default": false,
                      "type": "boolean"
                    },
                    "generated_always_as": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "name",
                    "type"
                  ],
                  "additionalProperties": false
                },
                {
                  "title": "Integer column",
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "minLength": 2,
                      "maxLength": 59,
                      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                    },
                    "description": {
                      "type": "string",
                      "maxLength": 255
                    },
                    "type": {
                      "type": "string",
                      "const": "integer"
                    },
                    "nullable": {
                      "default": false,
                      "type": "boolean"
                    },
                    "default": {
                      "type": "integer",
                      "minimum": -9007199254740991,
                      "maximum": 9007199254740991
                    },
                    "unique": {
                      "default": false,
                      "type": "boolean"
                    },
                    "generated_always_as": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "name",
                    "type",
                    "nullable"
                  ],
                  "additionalProperties": false
                },
                {
                  "title": "Text column",
                  "description": "Used for storing text content regardless of size.",
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "minLength": 2,
                      "maxLength": 59,
                      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                    },
                    "description": {
                      "type": "string",
                      "maxLength": 255
                    },
                    "type": {
                      "type": "string",
                      "const": "text"
                    },
                    "nullable": {
                      "default": false,
                      "type": "boolean"
                    },
                    "default": {
                      "type": "string"
                    },
                    "unique": {
                      "default": false,
                      "type": "boolean"
                    },
                    "generated_always_as": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "name",
                    "type"
                  ],
                  "additionalProperties": false
                },
                {
                  "title": "Date column without time",
                  "description": "Used for storing date values without time.",
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "minLength": 2,
                      "maxLength": 59,
                      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                    },
                    "description": {
                      "type": "string",
                      "maxLength": 255
                    },
                    "type": {
                      "type": "string",
                      "const": "date"
                    },
                    "nullable": {
                      "default": false,
                      "type": "boolean"
                    },
                    "default": {
                      "type": "string",
                      "const": "CURRENT_DATE()"
                    },
                    "unique": {
                      "default": false,
                      "type": "boolean"
                    }
                  },
                  "required": [
                    "name",
                    "type"
                  ],
                  "additionalProperties": false
                },
                {
                  "title": "Date column with time",
                  "description": "Used for storing date and time values.",
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "minLength": 2,
                      "maxLength": 59,
                      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                    },
                    "description": {
                      "type": "string",
                      "maxLength": 255
                    },
                    "type": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "const": "timestamp"
                        },
                        "options": {
                          "type": "object",
                          "properties": {
                            "withTimeZone": {
                              "default": true,
                              "type": "boolean"
                            }
                          },
                          "required": [
                            "withTimeZone"
                          ],
                          "additionalProperties": false
                        }
                      },
                      "required": [
                        "name",
                        "options"
                      ],
                      "additionalProperties": false
                    },
                    "nullable": {
                      "default": false,
                      "type": "boolean"
                    },
                    "default": {
                      "type": "string",
                      "const": "now()"
                    },
                    "unique": {
                      "default": false,
                      "type": "boolean"
                    }
                  },
                  "required": [
                    "name",
                    "type"
                  ],
                  "additionalProperties": false
                },
                {
                  "title": "UUID foreign key column",
                  "description": "Used for identifying a row in another table with UUID v4. It references a column in another table.",
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "minLength": 2,
                      "maxLength": 59,
                      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                    },
                    "description": {
                      "type": "string",
                      "maxLength": 255
                    },
                    "type": {
                      "type": "string",
                      "const": "uuid"
                    },
                    "nullable": {
                      "default": false,
                      "type": "boolean"
                    },
                    "foreign_key": {
                      "type": "object",
                      "properties": {
                        "table": {
                          "type": "string",
                          "minLength": 2,
                          "maxLength": 59,
                          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                        },
                        "column": {
                          "type": "string",
                          "minLength": 2,
                          "maxLength": 59,
                          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                        }
                      },
                      "required": [
                        "table",
                        "column"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "name",
                    "type",
                    "foreign_key"
                  ],
                  "additionalProperties": false
                }
              ]
            }
          }
        },
        "required": [
          "name",
          "columns"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "version",
    "name",
    "tables"
  ],
  "additionalProperties": false
}